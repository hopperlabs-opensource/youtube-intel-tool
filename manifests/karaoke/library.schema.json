{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://hopperlabs-opensource.github.io/youtube-intel-tool/schemas/karaoke-library-v1.json",
  "title": "Karaoke Library Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "language", "tracks", "playlists"],
  "properties": {
    "version": {
      "type": "integer",
      "const": 1
    },
    "language": {
      "type": "string",
      "minLength": 2,
      "maxLength": 12
    },
    "tracks": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/track"
      }
    },
    "playlists": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/playlist"
      }
    }
  },
  "$defs": {
    "track": {
      "type": "object",
      "additionalProperties": false,
      "required": ["url"],
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "minLength": 1
        },
        "language": {
          "type": "string",
          "minLength": 2,
          "maxLength": 12
        }
      }
    },
    "playlist": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "tracks"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 160
        },
        "description": {
          "type": ["string", "null"],
          "maxLength": 2000
        },
        "tracks": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/track"
          }
        }
      }
    }
  }
}
