# Local infrastructure
# Edit ports here; app and scripts derive defaults from this file.
YIT_POSTGRES_PORT=55432
YIT_REDIS_PORT=56379
YIT_PROMETHEUS_PORT=59092
YIT_GRAFANA_PORT=53000
LOG_LEVEL=info

# Web/CLI defaults
YIT_WEB_PORT=3333
YIT_KARAOKE_PORT=3334
YIT_WORKER_METRICS_PORT=4010

# Optional explicit URL overrides (advanced)
# DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:55432/youtube_intel
# REDIS_URL=redis://127.0.0.1:56379
# METRICS_PORT=4010
# YIT_BASE_URL=http://localhost:3333

# Embeddings + chat (local Ollama defaults)
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_EMBED_MODEL=nomic-embed-text
OLLAMA_CHAT_MODEL=llama3.1

# Optional OpenAI settings (leave key empty unless using OpenAI)
OPENAI_BASE_URL=https://api.openai.com
# If unset, the UI Settings modal can provide a browser-local fallback key
# for embeddings-backed search/chat retrieval in local development.
OPENAI_API_KEY=
YIT_OPENAI_STT_MODEL=whisper-1

# CLI-based providers (legacy â€” prefer unified config below)
YIT_CHAT_CLI_PROVIDER=gemini
YIT_CHAT_CLI_MODEL=
YIT_CHAT_CLI_TIMEOUT_MS=180000
YIT_ENRICH_CLI_PROVIDER=gemini
YIT_ENRICH_CLI_MODEL=
YIT_ENRICH_CLI_TIMEOUT_MS=180000

# Unified LLM Configuration
YIT_TEXT_PROVIDER=claude-cli
YIT_TEXT_MODEL=
YIT_VISION_PROVIDER=claude-cli
YIT_VISION_MODEL=
YIT_PREFER_LOCAL=true
YIT_TEMPERATURE=0.2
YIT_MAX_TOKENS_PER_CALL=4096

# Worker options
YIT_STT_PROVIDER=openai
YIT_DIARIZE_BACKEND=pyannote
YIT_PYTHON_BIN=python3.11
PYTHON_BIN=python3
YIT_DIARIZE_DEVICE=
YIT_DIARIZE_PYANNOTE_MODEL=pyannote/speaker-diarization-3.1

# Optional tokens (leave empty in committed files)
YIT_HF_TOKEN=
HUGGINGFACE_TOKEN=

# Optional advanced settings
YIT_CLI_CWD=
YIT_CONTRACT_TEST_INGEST_URL=
