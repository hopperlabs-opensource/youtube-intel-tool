{
  "name": "@yt/contracts",
  "version": "0.0.1",
  "description": "Zod schema contracts for YouTube Intel Tool APIs.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean --sourcemap",
    "clean": "rm -rf dist",
    "lint": "tsc -p tsconfig.json --noEmit --pretty false",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepack": "pnpm run build"
  }
}
